<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--定义所有Theme的基本属性-->
    <style name="AppCommonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--ActionBar颜色-->
        <item name="colorPrimary">?attr/theme_color</item>
        <!--StatusBar颜色-->
        <item name="colorPrimaryDark">?attr/statusbar_color</item>
        <item name="colorAccent">?attr/theme_color</item>

        <!--默认主题色-->
        <item name="theme_color">@color/md_teal_500</item>
        <!--默认状态栏颜色-->
        <item name="statusbar_color">@color/md_teal_700</item>
        <!--默认不适配，只有在19的时候在适配-->
        <item name="fitSystemWindows">false</item>
    </style>

    <!--Values-vxx之间的差异属性-->
    <style name="AppBaseTheme" parent="AppCommonTheme">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="MainTheme" parent="AppTheme">

    </style>
</resources>